defproc sink (chan?(int<4>) X)
{
  int<4> v;
  chp {
    *[ X?v; log ("Received value: ", v) ]
  }
}

defproc test_lut()
{
   source_A src_A;
   sink snk;
   lut l(src_A.X, snk.X);
}

