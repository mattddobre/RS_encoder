defproc source_A (chan!(int<4>) X)
{
  //int<4> i;
  chp {
	X!12; log("sent ", 12);
	X!2; log("sent ", 2);
	X!15; log("sent ", 15);
	X!5; log("sent ", 5)
  }
}

